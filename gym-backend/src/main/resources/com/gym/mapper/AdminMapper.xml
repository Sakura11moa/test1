<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gym.mapper.AdminMapper">

    <resultMap id="AdminResultMap" type="com.gym.entity.Admin">
        <id column="adminNo" property="adminNo" jdbcType="INTEGER"></id>
        <result column="adminAccount" property="adminAccount" jdbcType="VARCHAR"></result>
        <result column="adminPassword" property="adminPassword" jdbcType="VARCHAR"></result>
        <result column="employee_no" property="employeeNo" jdbcType="INTEGER"></result>
        <result column="employeeJob" property="employeeJob" jdbcType="INTEGER"></result>
    </resultMap>

    <!--根据搜索用户名和密码-->
    <select id="getAdminPassword" resultType="com.gym.entity.Admin" resultMap="AdminResultMap">
        SELECT a.*, e.employeeJob 
        FROM admin a
        LEFT JOIN employee e ON a.employee_no = e.employeeNo
        WHERE 1=1
        <if test="adminAccount != null">AND a.adminAccount = #{adminAccount}</if>
        <if test="adminPassword != null">AND a.adminPassword = #{adminPassword}</if>
    </select>

    <!--新增管理员/教练账号-->
    <insert id="addAdmin" parameterType="com.gym.entity.Admin" useGeneratedKeys="true" keyProperty="adminNo">
        INSERT INTO admin(adminAccount, adminPassword, employee_no)
        VALUES(#{adminAccount}, #{adminPassword}, #{employeeNo})
    </insert>



</mapper>